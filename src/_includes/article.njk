---
layout: "base.njk"
---


<article class="main-article">
<div class="container container--narrow flow">
  
    <h1 class="article-title">
      {{ title }}
    </h1>
    <p class="snippet__meta">
        <p>{{ description }}</p>
        <br>
        <small>by <span>{{ author }}</span> on
            <span>{{ date | postDate }}</span></small>
      </p>
    <figure class="main-article__figure">
      <img src="{{ image }}" alt="{{ imageAlt }}">
      <figcaption>
        {{ imageAlt }}
      </figcaption>
    </figure>
    
  
    {{ content | safe }}

</div>
</article>
